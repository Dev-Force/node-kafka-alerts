{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES6"],
    "module": "CommonJS",
    "outDir": "dist",
    "types": ["reflect-metadata"],
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "include": [
    ".eslintrc.js",
    "src/index.ts",
    "src/infra/**/*.ts",
    "src/interface-adapters/**/*.ts",
    "src/use-cases/**/*.ts",
    "src/domain/**/*.ts"
  ],
  "exclude": ["node_modules", ".vscode"]
}
